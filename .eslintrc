{
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2023,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": "error",
        "prefer-const": "error",
        "no-undef": "warn",
        "no-unused-vars": ["off", {
            "vars": "local",
            "args": "after-used",
            "ignoreRestSiblings": false
        }]
    }
}